{
  "dashboard": {
    "title": "Λ‑Möbius Pentastrat Metrics",
    "tags": ["mobius", "ai-os"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Tail Latency (p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(request_duration_seconds_bucket[5m]))"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "k·P (Combined Efficiency)",
        "type": "graph",
        "targets": [
          {
            "expr": "k_efficiency * p_parallelism"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Resilience (Θ)",
        "type": "gauge",
        "targets": [
          {
            "expr": "theta_resilience"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Utility (U)",
        "type": "graph",
        "targets": [
          {
            "expr": "utility_total"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 8}
      },
      {
        "id": 5,
        "title": "MTTR vs MTBF",
        "type": "graph",
        "targets": [
          {
            "expr": "mttr_seconds",
            "legendFormat": "MTTR"
          },
          {
            "expr": "mtbf_seconds",
            "legendFormat": "MTBF"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"mobius-services\"}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "ROI Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "roi_total"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
